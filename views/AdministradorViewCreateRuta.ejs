  <body>

    <div class="container mt-4">
      <div class="card border-secundary">
    
        <div class="card-header">Nueva Ruta</div>
        <div class="card-body">
    
          <form id="formAdmCreRut" action="/saveRuta" method="POST">
    
            <div class="mb-3">
              <label for="Id" class="form-label">Id Ruta</label>
              <input type="text" class="form-control" id="Id" name="Id" tabindex="1" >
            </div>
            <div class="mb-3">
              <label for="Localidad" class="form-label">Localidad</label>
              <input type="text" class="form-control" id="Localidad" name="Localidad" tabindex="2" >
            </div>
            <div class="mb-3">
              <label for="Indicacion" class="form-label">Indicaciones</label>
              <input type="text" class="form-control" id="Indicacion" name="Indicacion" tabindex="3" >
            </div>
            <div class="mb-3">
              <label for="Costo" class="form-label">Costo</label>
              <input type="number" step="0.01" class="form-control" id="Costo" name="Costo" tabindex="4">
            </div>

            <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
            <a href="/MainAdmin" class="btn btn-secundary">Cancelar</a>
          </form>
        </div>

  </body>

  <script>
    document.getElementById('formAdmCreRut').addEventListener('submit', function (event) {
      event.preventDefault();
      var pendiente;
  
      if (validateForm()) {
        this.submit();
      } else {
        // Utiliza SweetAlert en lugar de alert
        Swal.fire({
          icon: 'error',
          title: 'Oops... informaci√≥n pendiente ',
          text: 'Por favor, complete todos los campos del formulario.',
        });
      }
    });
  
    function validateForm() {
        var id = document.getElementById('Id').value;
        var localidad = document.getElementById('Localidad').value;
        var indicacion = document.getElementById('Indicacion').value;
        var costo = document.getElementById('Costo').value;
        
        if (id === '' || localidad === '' || indicacion === '' || costo === '') {
          return false;
        } else {
        return true;}
    }
    </script>
</html>