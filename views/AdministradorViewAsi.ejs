<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    

    <title>crud- create</title>
  </head>
  <body>

    <div class="container mt-4">
      <div class="card border-secundary">
    
        <div class="card-header">Asignar Ruta a Chofer</div>
        <div class="card-body">
    
          <form action="/saveRutaUsuario" method="POST">
    
            <div class="mb-3">
                <label for="localidad" class="form-label">Localidad</label>
                <select id="localidad" name="localidad" class="form-select" aria-label="Default select example">

                    <% ruta.forEach((cargarLocalidad)=>{ %>

                        <option value="<%=cargarLocalidad.idRuta%>"><%=cargarLocalidad.localidad%></option>

                    <% }) %>
                </select>
            </div>
            <div>
                
                <label for="nombre" class="form-label">Chofer</label>
                <select id="nombre" name="nombre" class="form-select" aria-label="Default select example">

                    <% chofer.forEach((cargarNombre)=>{ %>

                        <option value="<%=cargarNombre.cedulaUsuario%>"><%=cargarNombre.nombre%></option>

                    <% }) %>
                  
                </select>
                <br>
            </div>

            <div>
                <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                <a href="/MainAdmin" class="btn btn-secundary">Cancelar</a>
            </div>
            
          </form>
        </div>

  </body>
</html>